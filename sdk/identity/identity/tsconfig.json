{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "lib": ["DOM"],
    "resolveJsonModule": true,
    "paths": {
      "@azure/identity": ["./src/index"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "skipLibCheck": true // Until we sort out the MSAL problems
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.mts",
    "./src/**/*.cts",
    "./samples-dev/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": ["test/manual*/**/*", "integration/**", "node_modules"]
}
